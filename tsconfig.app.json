{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@dev/*": [
        "./src/dev/*"
      ],
      "@apps/*": [
        "./src/dev/apps/*"
      ],
      "@comps/*": [
        "./src/dev/components/*"
      ],
      "@assets/*": [
        "./src/dev/assets/*"
      ],
      "@utils/*": [
        "./src/dev/utils/*"
      ],
      "@api/*": [
        "./src/dev/api/*"
      ],
      "@styles/*": [
        "./src/dev/styles/*"
      ],
      "@pubHTML/*": [
        "./src/dev/pubComponents/PureHTML/*"
      ],
      "@pubSVG/*": [
        "./src/dev/pubComponents/SVG/*"
      ],
      "@sns/*": [
        "./src/dev/pubComponents/SnsTemplate/*"
      ],
      "@pub-utils/*": [
        "src/dev/pubUtils/*"
      ],
      "@svg-anim/*": [
        "src/dev/pubUtils/genSvgAimate/*"
      ],
      "@aieco/*": [
        "./src/dev/pubComponents/UserPackage/AIECO/*"
      ],
      "@svgDocument/*": [
        "./src/books/SvgDocument/*"
      ],
      "@shadcn/*": [
        "./src/dev/shadcn/*"
      ],
      "@books/*": [
        "./src/books/*"
      ],
      "@articles/*": [
        "./src/articles/*"
      ],
      "@music12doc/*": [
        "./src/books/Music12Document/*"
      ],
      "@tonicml/*": [
        "./src/dev/tonicml/*"
      ],
      "@mdx/*": [
        "./src/dev/components/mdx/*"
      ]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    /* Linting */
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ]
}

